<h1><%= @product.name %></h1>
<div class='jumbo'>
<% if @product.vendor %>
	<h2><%= @product.vendor.name %><h2>
<%end%>
<img src="<%= @product.photo %>" height="200" width="200"/>
<h2><%= @product.description %>
	<% if @product.product_options %>
<h3>Options :</h3>
<ul>
 	<% @products.product_options.each do |product_option| %>
  	<li><%= product_option.name %></li>
  	<%end%>

</ul>
<%end%>
<h5><%= @product.sales_price %></h5>
<h5><%= @product.sales_tax %></h5>
<h5><%= @product.total_price %></h5>

<% if user_signed_in? && current_user.admin? %>
<p><a href="/products/<%= @product.id %>/edit">
	<p> Edit Item </p></a>
<%end%>
	</br>
</br>
</br>

<% if user_signed_in? %>
<%= form_for @carted_product do |f| %>

	
	<%= f.label :quantity %>
	<%= f.text_field :quantity %>
	
	<%= f.hidden_field :product_id, value: @product.id %>

	<%= f.submit "Add To Cart" %>
	
<%end%>
<%end%>
</div>

<a href="/">Go home</a>

